<%= form_with model: @product do |form| %>
  <%= form.text_field :name, placeholder:"product name"%><br /><br />
  <%= form.text_field :classification, placeholder:"classification"%><br><br>
  <%= form.text_field :purchase_price, placeholder:"Selling price"%><br><br />
  <%= form.text_field :selling_price, placeholder:"Purchase price"%><br><br>
  <%= form.submit "Save"%>
<% end %>
