<%= form_with model: @product do |form| %>
  <%= form.text_field :name, placeholder:"nombre del producto"%><br /><br />
  <%= form.text_field :classification, placeholder:"clasificacion del producto"%><br><br>
  <%= form.text_field :purchase_price, placeholder:"precio de compra"%><br><br />
  <%= form.text_field :selling_price, placeholder:"precio de venta"%><br><br>
  <%= form.submit "Guardar cambios"%>
<% end %>
